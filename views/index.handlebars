
<img class="burgerpic" src ="/assets/img/burger.png">
<div class="flex-container" style="display: flex; flex-direction:row; justify-content: space-around">
    <div class="row" style="width: 100%;">
        <div class="col">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devour=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devour=false}}
                {{/if}}
                {{/each}}  
            </ul>      
        </div>
    </div>
</div>
<h2>Eat-Da-Burger!</h2>



{{!-- <button type="add">Add Burger</button> --}}
<form class="create-form">

  <div class="form-group">
    <input type="text" id="bur" name="name">
   
  </div>
  <div class="form-group">
  </div>
  <input type="hidden" id="dev_" name="devoured" value="0">

  <button type="submit" id="create-burger">Submit</button>
  <h5>Enter a burger you want to eat Click the "Submit" button</h5>

</form>
